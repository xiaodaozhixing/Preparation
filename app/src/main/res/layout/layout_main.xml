<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.auspicious.preparation.Main">
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.016"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:text="@string/title"
            android:textSize="20sp"
            android:layout_marginStart="140dp"
            android:id="@+id/text_view_title"
    />
    <LinearLayout
            android:id="@+id/linear_layout"
            android:orientation="vertical"
            android:layout_width="368dp"
            android:layout_height="452dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
        <com.example.auspicious.preparation.Views.EmptyView
		        android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
        <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
        
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
